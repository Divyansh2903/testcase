generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  role        Role         @default(USER)
  submissions Submission[]
}

model Problem {
  id           String        @id @default(uuid())
  name         String
  description  String
  examples     Example[]
  tags         Tag[]
  testCases    TestCase[]
  starterCodes StarterCode[]
  difficulty   Difficulty
  timeLimit    Int
  memoryLimit  Int
  published    Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  submissions  Submission[]
}

model Tag {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  problems Problem[]
}

model Example {
  id          String  @id @default(uuid())
  input       String
  output      String
  explanation String
  problem     Problem @relation(fields: [problemId], references: [id])
  problemId   String
}

model TestCase {
  id             String        @id @default(uuid())
  input          String
  expectedOutput String
  visibility     Boolean       @default(false)
  problem        Problem       @relation(fields: [problemId], references: [id])
  problemId      String
  testCaseRuns   TestCaseRun[]
}

model StarterCode {
  id         String  @id @default(uuid())
  languageId Int
  code       String
  problem    Problem @relation(fields: [problemId], references: [id])
  problemId  String
}

model Submission {
  id               Int              @id @default(autoincrement())
  submittedAt      DateTime         @default(now())
  submittedCode    String
  languageUsed     Int
  errorMessage     String?
  submissionStatus SubmissionStatus @default(PENDING)
  problem          Problem          @relation(fields: [problemId], references: [id])
  problemId        String
  user             User             @relation(fields: [userId], references: [id])
  userId           String
  testRuns         TestCaseRun[]
}

model TestCaseRun {
  id              String     @id @default(uuid())
  submissionToken String     @unique
  actualOutput    String?
  status          RunStatus  @default(PENDING)
  time            Float?
  memory          Float?
  testCase        TestCase   @relation(fields: [testCaseId], references: [id])
  testCaseId      String
  submission      Submission @relation(fields: [submissionId], references: [id])
  submissionId    Int
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum RunStatus {
  PENDING
  AC
  WA
  TLE
  RE
  CE
}

enum SubmissionStatus {
  PENDING
  ACCEPTED
  REJECTED
}
