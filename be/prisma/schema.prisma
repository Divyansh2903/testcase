generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  role        Role         @default(USER)
  submissions Submission[]
}

model Problem {
  id           String        @id @default(uuid())
  name         String
  description  String
  examples     Example[]
  tags         Tag[]
  test_cases   TestCase[]
  starter_code StarterCode[]
  difficulty   Difficulty
  time_limit   Int
  memory_limit Int
  published    Boolean       @default(true)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  submissions  Submission[]
}

model Tag {
  id      Int       @id @default(autoincrement())
  title   String    @unique
  problem Problem[]
}

model Example {
  id           String   @id @default(uuid())
  input        String
  output       String
  explaination String
  problems     Problem @relation(fields: [problemsId], references: [id])
  problemsId   String
}

model TestCase {
  id              String   @id @default(uuid())
  input           String
  expected_output String
  visibility      Boolean  @default(false)
  problems        Problem @relation(fields: [problemsId], references: [id])
  problemsId      String
}

model StarterCode {
  id         String    @id @default(uuid())
  language   Languages @default(JAVASCRIPT)
  code       String
  problems   Problem  @relation(fields: [problemsId], references: [id])
  problemsId String
}

model Submission {
  id             Int              @id @default(autoincrement())
  submitted_at   DateTime         @default(now())
  submitted_code String
  language_used  Languages
  memory_used    Int?
  runtime        Int?
  error_message  String?
  problems       Problem          @relation(fields: [problemsId], references: [id])
  problemsId     String
  user           User             @relation(fields: [userId], references: [id])
  userId         Int
  status         SubmissionStatus @default(PENDING)
}

enum Role {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  HARD
  MEDIUM
}

enum SubmissionStatus {
  PENDING
  AC
  WA
  TLE
  RE
  CE
}

enum Languages {
  JAVASCRIPT
  PYTHON
  CPP
}
